# Need Nodejs, Geth, testrpc, truffle, atom

sudo apt-get install curl \
# For nodejs 9
&& curl -sL https://deb.nodesource.com/setup_9.x | sudo -E bash - \
&& sudo apt-get update && sudo apt-get install -y nodejs \

# For Geth
&& sudo apt-get install software-properties-common \
&& sudo add-apt-repository -y ppa:ethereum/ethereum \
&& sudo apt-get update && sudo apt-get upgrade && sudo apt install ethereum \

# For Testrpc
&& sudo npm install -g ethereumjs-testrpc \

# For Truffle framework
&& sudo npm install -g truffle@3.4.11 \

# For Atom text editor
&& sudo add-apt-repository -y ppa:webupd8team/atom \
&& sudo apt-get update && sudo apt-get upgrade && sudo apt install atom \

# For installing ethereum language for atom editor
&& sudo apm install language-ethereum \

# Check the versions for nodejs and npm
&& node -v && npm -v \

# Check the version for geth
&& geth version \

# Check the version for testrpc
&& testrpc version \

# Check the version for truffle framework
&& truffle version \

# Check the version for atom
&& atom -v \
