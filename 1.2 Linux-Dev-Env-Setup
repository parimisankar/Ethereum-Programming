# Need Tree, Curl, Nodejs, Geth, testrpc, truffle, atom

# For Tree, Curl, Nodejs
sudo apt-get update && sudo apt-get upgrade && sudo apt-get dist-upgrade && sudo apt-get install tree curl && curl -sL https://deb.nodesource.com/setup_9.x | sudo -E bash - && sudo apt-get update && sudo apt-get install -y nodejs

# For Geth
sudo apt-get install software-properties-common && sudo add-apt-repository -y ppa:ethereum/ethereum && sudo apt-get update && sudo apt-get upgrade && sudo apt install ethereum

# For Testrpc & Truffle framework
sudo npm install -g ethereumjs-testrpc truffle@3.4.11

# For Atom text editor and ethereum language for atom editor
sudo add-apt-repository -y ppa:webupd8team/atom && sudo apt-get update && sudo apt-get upgrade && sudo apt install atom  && sudo apm install language-ethereum

# Check the versions of environment
node -v && npm -v & geth version && truffle version && atom -v && testrpc version
